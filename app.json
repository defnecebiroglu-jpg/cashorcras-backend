{
  "name": "cash-or-crash",
  "description": "Turkish High School Entrepreneurship Simulation",
  "keywords": ["nodejs", "express", "react"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-20",
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "RAILWAY_ENVIRONMENT": {
      "description": "Railway deployment flag",
      "value": "true"
    },
    "SESSION_SECRET": {
      "description": "Session secret key",
      "generator": "secret"
    }
  }
}